.navbar.navbar-light.fixed-top.navbar-expand-md
  .container
    a.navbar-brand(href='/')
      i.fas.fa-cube
      | Careernests
    button.navbar-toggler(type='button', data-toggle='collapse', data-target='.navbar-collapse')
      span.sr-only Toggle navigation
      span.navbar-toggler-icon
    .collapse.navbar-collapse
      ul.nav.navbar-nav.ml-auto
        //li.nav-item(class=(title === 'Home') ? 'active' : undefined)
          a.nav-link(href='/') Home
        if !user || user.usertype === 'employer'
          li.nav-item(class=(title === 'Employers') ? 'active' : undefined)
            a.nav-link(href='/employer') Employers
        if !user || user.usertype === 'jobSeeker'
          li.nav-item(class=(title=== 'Candidate') ? 'active' : undefined)
            a.nav-link(href='/candidate') Jobs and Careers seekers
        li.nav-item(class=(title === 'Skills') ? 'active' : undefined)
          a.nav-link(href='/skill') Jobsite Gossips and Skills
        li.nav-item(class=(title === 'Plans') ? 'active' : undefined)
          a.nav-link(href='/plan') Plans and Services
          //a.nav-link(href='/status') Plans and Services
      ul.nav.navbar-nav.ml-auto
        if !user
          li.nav-item(class=(title === 'Sign in') ? 'active' : undefined)
            a.nav-link(href='/login') Sign in
          li.nav-item(class=(title === 'Create Account') ? 'active' : undefined)
            a.nav-link(href='/signup') Sign up
        else
          li.dropdown(class=(title === 'Account Management') ? 'active' : undefined).nav-item
            a.dropdown-toggle.nav-link(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src=user.profile.picture)
              else
                img(src=user.gravatar(60))
              span= user.profile.name || user.email || user.id
              i.caret
            ul.dropdown-menu
              li.dropdown-item
                a(href='/account') My Account
              li.divider.dropdown-item
              li.dropdown-item
                a(href='/logout') Logout
