extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom
    h3 Email Confirmation
  form(id='signup-form', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    input(type='hidden', name='email', value=email)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='email') Confirmation Code
      .col-md-7
        input.form-control(type='text', name='token', id='token', placeholder='confirmation code', autofocus, required)
    .form-group.offset-sm-3.col-md-7.pl-2
      button.btn.btn-success(type='submit')
        i.fas.fa-user-plus.fa-sm
        | Agree &amp; confirm